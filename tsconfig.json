{
  "compilerOptions": {
    "target": "es2016",
    "module": "commonjs",
    "baseUrl": "./app", 
    "paths": {
      "@core/*": [
        "core/*"
      ],
      "@entities/*": [
        "core/domain/entities/*"
      ],
      "@interfaces/*": [
        "core/interfaces/*"
      ],
      "@use-cases/*": [
        "core/use-cases/*"
      ]
    },
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true
  }
}

